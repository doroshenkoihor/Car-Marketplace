<% if current_user&.admin? %>
<p style="color: green"><%= notice %></p>

<h1>Dealers</h1>

<div id="dealers">
  <% @dealers.each do |dealer| %>
    <%= render dealer %>
    <p>
      <%= link_to "Show this dealer", dealer %>
    </p>
  <% end %>
</div>

<%= link_to "New dealer", new_dealer_path %>
<% end %>
