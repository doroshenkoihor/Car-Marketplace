<% if current_user&.admin? %>
<div class="row row-cols-1 row-cols-md-5 g-4 mb-4">
  <div class="col">
    <div class="card" style="width: 300px;">
      <h1 class="mb-4 card-header">Model:
        <%= @model.name %></h1>
      <h3 class="mb-4 card-body">Brand:
        <%= @model.brand.name %></h2>
      <div class="card-body">
      <h3 class="mb-4 card-body">Description:
        <%= @model.description %></h2>
      <h3 class="mb-4 card-body">Cars count:
        <%= @model.cars.count %></h2>
        <%= button_to "Edit", edit_model_path(@model), class: 'btn btn-secondary btn-sm', method: :get %>
        <%= link_to "Back to models", models_path, class: 'btn btn-secondary btn-sm' %>
        <%= link_to "Destroy", model_path(@model), class: 'btn btn-danger btn-sm', data: {method: :delete, confirm: "Are you sure?"} %>
      </div>
    </div>
  </div>
</div>
<% end %>