<% if current_user&.admin? %>
<div id="<%= dom_id model %>">
  <p>
    <strong>Name:</strong>
    <%= model.name %>
  </p>
  <% if model.parent %>
    <strong>Parent:</strong>
    <%= model.parent.name %>
  <% end %>
  </p>
  <p>
    <strong>Cars count:</strong>
    <%= model.cars.count %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= model.description %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= model.brand.name %>
  </p>
</div>
<% end %>