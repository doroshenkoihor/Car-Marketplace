<% if current_user&.admin? %>
<%= button_to "New brand", new_brand_path, :id => 'open-contacts-dialog-btn',
class: 'btn btn-primary', :method => :get %>
<h1 class="mb-4">Brands:</h1>
<div class="row row-cols-1 row-cols-md-5 g-4 mb-4">
  <% @brands.each do |brand| %>
    <div class="col">
      <div class="card" style="width: 300px;">
        <h2 class="mb-4 card-header"><%= brand.name %></h2>
        <div class="card-body">
            <%= button_to "Show this brand", brand, class: 'btn btn-secondary btn-sm', :method => :get %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<% end %>
